# Get compiler and flags
get_filename_component(SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

include(${SELF_DIR}/checkpointTargets.cmake)

include(CMakeFindDependencyMacro)

set (detector_DIR @detector_DIR@)
find_dependency(detector REQUIRED HINTS @detector_DIR@)

if (@CHECKPOINT_HAS_KOKKOS_LIBRARY@)
  set (kokkos_DIR @kokkos_DIR@)
  set (kokkosCore_DIR @kokkoscore_DIR@)
  if (@kokkos_DIR_FOUND@)
    find_dependency(kokkos REQUIRED HINTS @kokkos_DIR@/CMake/Kokkos NAMES Kokkos)
  endif()
  if (@kokkoscore_DIR_FOUND@)
    find_dependency(kokkoscore REQUIRED HINTS @kokkos_DIR@/CMake/KokkosCore NAMES KokkosCore)
  endif()
endif()
